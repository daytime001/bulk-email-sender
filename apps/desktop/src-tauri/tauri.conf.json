{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bulk-Email-Sender",
  "version": "0.1.0",
  "identifier": "com.bulk.email.sender",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bulk-Email-Sender",
        "width": 1260,
        "height": 860,
        "resizable": true,
        "fullscreen": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "bundleName": "Bulk-Email-Sender"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../../worker.py",
      "../../../bulk_email_sender",
      "../../../examples/recipients"
    ]
  }
}
